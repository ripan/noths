<p id="notice"><%= notice %></p>

<h3>Listing Product Promotional Rules</h3>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Discount percentage</th>
      <th>Discount price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @promotional_rules.each do |promotional_rule| %>
    <tr>
      <td><%= link_to promotional_rule.product.name, promotional_rule %></td>
      <td><%= number_to_currency(promotional_rule.product.price) %></td>
      <td><%= promotional_rule.quantity %></td>
      <td><%= promotional_rule.discount_percentage %> %</td>
      <td><%= number_to_currency(promotional_rule.discount_price) %></td>
      <td>
        <div class="pull-right">
          <%= link_to 'Show', promotional_rule , :class=>"btn btn-success btn-sm"%>
          <%= link_to 'Edit', edit_promotional_rule_path(promotional_rule) , :class=>"btn btn-info btn-sm"%>
          <%= link_to 'Destroy', promotional_rule, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-danger btn-sm"%>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

