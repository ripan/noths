<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h3 class="text-muted">Sign in</h3>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, :placeholder=>"Enter email", :class=>"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", :placeholder=>"Enter password", :class=>"form-control" %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>
    
    <%= f.submit "Sign in", :class=>"btn btn-primary btn-block" %>

    <% end %>
    <hr>

    <p><strong>Haven't got a profile yet?</strong><%= link_to "Sign up", new_registration_path(resource_name) , :class => "pull-right"%></p>
    <p><strong>Forgot your password?</strong><%= link_to "Recover", new_password_path(resource_name), :class => "pull-right" %></p>
  </div>
</div>